<!-- views/loading.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        .spinner {
            border: 8px solid #f3f3f3;
            border-top: 8px solid #3498db;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        .center {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            font-family: Arial, sans-serif;
        }
    </style>
</head>
<body>
    <div class="center">
        <div class="spinner"></div>
        <h2>Logging <%= action %>...</h2> <!-- Dynamic message -->
    </div>

    <!-- Script for delayed redirect -->
    <script>
        setTimeout(() => {
            window.location.href = "<%= redirectTo %>";
        }, 2000); // 2-second delay
    </script>
</body>
</html>
